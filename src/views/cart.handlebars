<table id="cart-table">
  <thead>
    <tr>
      <th>Carrito ID</th>
      <th>Producto ID</th>
      <th>Cantidad</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each carritos}}
      {{#each products}}
        <tr>
          <td>{{../cartNumber}}</td>
          <td>{{productId}}</td>
          <td>{{quantity}}</td>
          <td>
            <form action="/api/removeFromCart" method="post" class="remove-form">
              <input type="hidden" name="cartId" value="{{../_id}}">
              <input type="hidden" name="productId" value="{{productId}}">
              <button type="submit" class="remove-button">Eliminar🗑️</button>
            </form>
          </td>
        </tr>
      {{/each}}
    {{/each}}
  </tbody>
</table>
<a href="/api/products">Volver🔙</a>